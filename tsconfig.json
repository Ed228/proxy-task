{
  "extends": "@tsconfig/node14/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "include": ["src/**/*"],

  "compilerOptions": {
    "outDir": "./out",
    "lib": ["es2020"],
    "module": "ES2020",
    "target": "es2020",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}